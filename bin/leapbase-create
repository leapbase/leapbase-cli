#!/usr/bin/env node

const args = require('args');
const support = require('support');
const arguments = process.argv;
const projectName = arguments[2] || '';

if (!projectName) {
  console.log('leapbase create <project name>');
  console.log('missing project name');
  return;
}

(async function() {
  let result = await support.createProject(projectName);
  if (result) {
    console.log(`${projectName} is created.`);
  } else {
    console.log(`failed to create ${projectName}`)
  }
})();

